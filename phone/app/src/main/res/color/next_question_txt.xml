<?xml version="1.0" encoding="utf-8"?>
<!-- 一级导航文字点击颜色 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中时的图片背景 -->
    <item android:state_checked="true" android:color="@color/color_89e00d"/>
    <!-- 单击时的背景图片 -->
    <item android:state_pressed="true" android:color="@color/color_89e00d"/>
    
    <item android:state_selected="true" android:color="@color/color_89e00d"/>
    <!-- 默认时的背景图片 -->
    <item android:color="@color/color_999999"/>

</selector>