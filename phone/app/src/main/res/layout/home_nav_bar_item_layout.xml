<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/home_nav_bar_height"
              android:layout_margin="@dimen/home_nav_bar_margin"
              android:layout_weight="1"
              android:background="@drawable/home_nav_bar_selecter"
              android:duplicateParentState="true"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="@dimen/nav_icon_width"
        android:layout_height="@dimen/nav_icon_width"
        android:background="@drawable/navi_main_normal"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/nav_txt"
        style="@style/HomeNavBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/home_nav_bar_marginleft"
        android:gravity="center_vertical"
        android:text="@string/exercises"/>
</LinearLayout>