<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_question_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/color_666666"
        android:layout_marginStart="@dimen/question_fragment_q_margin_l_r"
        android:layout_marginEnd="@dimen/question_fragment_q_margin_l_r"
        android:textSize="@dimen/choose_fragment_item_text_size"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="@dimen/login_default_width"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/choose_fragment_item_margin_t_b"
        android:layout_marginBottom="@dimen/choose_fragment_item_margin_t_b"
        android:textSize="@dimen/choose_fragment_item_content_text_size"
        android:textColor="@color/color_666666"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="@dimen/choose_fragment_item_content_line_space"
        android:lineSpacingMultiplier="1"/>

    <View
        android:id="@+id/v_question_select"
        android:layout_width="@dimen/choose_fragment_unselect_round_w_h"
        android:layout_height="@dimen/choose_fragment_unselect_round_w_h"
        android:background="@drawable/shape_choose_round_unselect"
        android:layout_marginEnd="@dimen/question_fragment_q_margin_l_r"
        android:layout_gravity="center_vertical"/>
</LinearLayout>