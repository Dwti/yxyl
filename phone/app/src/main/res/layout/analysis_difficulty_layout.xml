<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/AnalysisViewLeftTitle"
        android:text="@string/answer_difficulty" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/analysis_view_paddingbottom"
        android:layout_marginBottom="@dimen/analysis_view_paddingbottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rathing_bg" />

        <ImageView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/analysis_difficuty_spaceing"
            android:background="@drawable/rathing_bg" />

        <ImageView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/analysis_difficuty_spaceing"
            android:background="@drawable/rathing_bg"/>

        <ImageView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/analysis_difficuty_spaceing"
            android:background="@drawable/rathing_bg"/>

        <ImageView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/analysis_difficuty_spaceing"
            android:background="@drawable/rathing_bg"/>

    </LinearLayout>

    <include layout="@layout/analysis_line_layout" />
</LinearLayout>