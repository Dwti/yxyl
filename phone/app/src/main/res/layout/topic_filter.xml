<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_filter_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@drawable/topic_filter_text_color"
            android:text="字母排序"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/filter_up"/>

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/filter_down"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="17dp"
        android:background="#e1e3e0"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_filter_pop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@drawable/topic_filter_text_color"
        android:text="人气排序"/>

    <View
        android:layout_width="2dp"
        android:layout_height="17dp"
        android:background="#e1e3e0"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_filter_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@drawable/topic_filter_text_color"
            android:text="全部"/>

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/down_arrow_selector"/>


    </LinearLayout>

</LinearLayout>