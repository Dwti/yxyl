<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mistake_list_item_h"
        android:background="@drawable/selector_mistake_list_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mistake_icon"
            android:layout_width="@dimen/mistake_list_item_icon_w_h"
            android:layout_height="@dimen/mistake_list_item_icon_w_h"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/mistake_list_item_padding_l"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_mistake_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/mistake_list_item_text_margin_icon"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/mistake_list_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mistake_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_89e00d"
            android:textSize="@dimen/mistake_list_item_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/mistake_list_item_padding_r"
            android:text="@string/topic"
            android:textColor="@color/color_89e00d"
            android:textSize="@dimen/mistake_list_item_text_size2"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/mistake_list_item_icon2_w_h"
            android:layout_height="@dimen/mistake_list_item_icon2_w_h"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/mistake_list_item_padding_r"
            android:background="@drawable/arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/color_edf0ee" />
</LinearLayout>