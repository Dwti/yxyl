<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/subject_grid_item_w_h"
    android:layout_height="@dimen/subject_grid_item_w_h">

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="@dimen/subject_grid_item_icon_w_h"
        android:layout_height="@dimen/subject_grid_item_icon_w_h"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/subject_grid_item_delete_icon_w_h"
        android:layout_height="@dimen/subject_grid_item_delete_icon_w_h"
        android:background="#00ff00"
        android:layout_alignParentRight="true"/>
</RelativeLayout>