<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/classfy_choice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_classify_drawer_textview_normal"
        android:gravity="left|center_vertical"
        android:minHeight="45dp"
        android:minWidth="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/color_ffffff"
        android:textSize="19dp"
        android:layout_marginRight="10dp"
        tools:text="3424234" />

    <ImageView
        android:id="@+id/classify_drawer_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/classfy_choice_text"
        android:layout_marginRight="-10dp"
        android:background="@drawable/selector_classify_drawer_close" />
</RelativeLayout>

