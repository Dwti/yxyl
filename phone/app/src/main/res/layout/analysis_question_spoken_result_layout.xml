<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/AnalysisViewLeftTitle"
        android:text="@string/answer_result" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/analysis_view_paddingbottom"
        android:paddingLeft="@dimen/analysis_view_paddingbottom"
        android:paddingRight="@dimen/analysis_view_paddingbottom"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hand1"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/iv_hand2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="3dp" />

            <ImageView
                android:id="@+id/iv_hand3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/analysis_answer_result_SpacingExtra"
            android:textColor="@color/color_336600"
            android:textSize="@dimen/analysis_answer_result_textsize"
            android:text="未作答"/>
    </RelativeLayout>

    <include layout="@layout/analysis_line_layout" />

</LinearLayout>